[Unit]
Description=Zookeeper Daemon
Documentation=http://zookeeper.apache.org
Requires=network.target
After=network.target

[Service]
Type=forking
WorkingDirectory={{ installation_dir }}
User={{ user }}
Group={{ group }}
ExecStart={{ installation_dir }}/bin/zkServer.sh start {{ config_dir }}/zoo.cfg
ExecStop={{ installation_dir }}/bin/zkServer.sh stop {{ config_dir }}/zoo.cfg
ExecReload={{ installation_dir }}/bin/zkServer.sh restart {{ config_dir }}/zoo.cfg
TimeoutSec=30
Restart=on-failure

[Install]
WantedBy=default.target
